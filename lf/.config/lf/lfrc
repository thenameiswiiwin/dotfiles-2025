# https://github.com/gokcehan/lf/wiki/Previews
set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

# Basic Settings
set shell zsh
set scrolloff 10
set dircounts
set info size
set period 1
set drawbox
set ignorecase true
set icons true
set preview true
set hidden true
set incsearch true
set incfilter true
set mouse true

# Custom Functions
cmd mkdir ${{
    printf "Directory Name: "
    read -r dir_name
    mkdir -p "$dir_name"
}}

cmd mkfile ${{
    printf "File Name: "
    read -r file_name
    $EDITOR "$file_name"
}}

cmd z %lf -remote "send $id cd '$(zoxide query $1)'"

cmd zi ${{
    res="$(zoxide query -i "$1")"
    lf -remote "send $id cd \"$res\""
}}

cmd copy-dirname ${{
    dirname -- "$f" | head -c-1 | xclip -selection clipboard
}}

cmd copy-path ${{
    printf '%s' "$fx" | xclip -selection clipboard
}}

# Trash Commands
cmd trash ${{
    for file in $fx; do
        trash-put "$file"
    done
}}

cmd restore_trash ${{
    trash-restore
}}

cmd disk-usage ${{
    df -H "$PWD"
    read -r -p "Press any key to continue..." null
}}

cmd edit-config ${{
    $EDITOR ~/.config/lf/lfrc
    lf -remote "send $id source ~/.config/lf/lfrc"
}}

map C edit-config

cmd toggle_preview ${{
    if [ "$lf_preview" = "true" ]; then
        lf -remote "send $id :set preview false; set ratios 1:5"
    else
        lf -remote "send $id :set preview true; set ratios 1:2:3"
    fi
}}

map zp toggle_preview

# Editor Shortcut
map e $EDITOR "$f"

# File Management Shortcuts
map . set hidden!
map dd trash
map dr restore_trash
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map Y :copy-path
map du disk-usage

map Z :zi

# Navigate to Symlink Target
map gl &{{
    target="$(realpath -s -- "$(readlink -- "$f")")"
    lf -remote "send $id select '$target'"
}}

# Quick Navigation Shortcuts
map gD cd ~/documents
map gd cd ~/downloads
map gp cd ~/pictures
map gc cd ~/.config
map gr cd ~/repos
map gv cd ~/videos
map gs cd ~/.local/bin
map gt cd ~/.local/share/Trash/files
