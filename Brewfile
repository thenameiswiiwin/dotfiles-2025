if OS.mac?

  brew "hammerspoon" # Automate macOS using Lua
  brew "kitty" # Better terminal
  brew "rectangle" # Window manager
  brew "trash-cli" # Move files to trash
  brew "1password" # Password manager
  brew "1password/tap/1password-cli" # 1Password CLI

  #Fonts
  brew cask font-jetbrains-mono 
  brew cask font-jetbrains-mono-nerd-font f 
  brew cask font-victor-mono 
  brew cask font-victor-mono-nerd-font
  brew cask font-symbols-only-nerd-font

elsif OS.linus? 
  brew 'xclip' # access to clipboard (similar to pbcopy/pbpaste)
end

tap "homebrew/bundle"


